{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"target": "ES2019",
		"declaration": true,
		"esModuleInterop": true,
		"lib": ["es6"],
		"outDir": "lib",
		"checkJs": true,
		"allowJs": true,
		"declarationDir": "@types",
		"resolveJsonModule": true,
		"sourceMap": true
	},
	"include": ["src/**/*"]
}
